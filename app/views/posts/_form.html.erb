<div class="progress-inactive" id="progress-bar">
  <div class="indeterminate"></div>
</div>

<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


      <form>
        <div class="row">
          <div class="col s2">  
            <div class="file-field input-field">
              <div class="btn">
                <i class="large material-icons">camera</i>
                <%= f.file_field :avatar %>
              </div>
            </div>
          </div>
          
          <div class="col s10">
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :title %>
                <%= f.text_field :title %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.label :desc %>
            <%= f.text_area :desc, class: "materialize-textarea" %>
          </div>
        </div>
        <button onclick="showProgress()" class="btn waves-effect waves-light" type="submit" name="action">
          <%= f.submit %>
          <i class="material-icons right">send</i>
        </button>
      </form>

    

<% end %>

